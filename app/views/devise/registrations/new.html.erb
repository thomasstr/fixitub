<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
	<%= f.input :name, :required => true, :autofocus => true, placeholder: "Navn" %>
    <%= f.input :email, :required => true, placeholder: "E-post" %>
    <%= f.input :password, :required => true, placeholder: "Passord" %>
    <%= f.input :password_confirmation, :required => true, placeholder: "Passord igjen" %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Registrer meg" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
