<table class="table table-striped">
  <tr>
    <th>Produktnavn</th>
    <th>Artikkelnummer</th>
    <th>Info</th>
    <th>Pris</th>
    <th></th>
  </tr>

<% @products.each do |product| %>
  <tr>
    <td><%= best_in_place product, :p_name %></td>
    <td><%= best_in_place product, :p_anr %></td>
    <td><%= best_in_place product, :p_about %></td>
    <td><%= best_in_place product, :p_price %></td>
    <td><%= link_to 'Show', product, :class => "btn" %>
    <%= link_to 'Edit', edit_product_path(product), :class => "btn" %>
    <%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger" %></td>
  </tr>
<% end %>
</table>

<%= link_to 'Nytt produkt', new_product_path %>
