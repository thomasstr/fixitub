  <div class="control-group">
	  <%= f.text_area :p_about, :type => :textarea, "placeholder" => "Om produktet", :cols => '5x10' %>
  </div>
  <div class="control-group">
	  <%= f.text_field :p_price, "placeholder" => "Pris" %>
  </div>
  <div class="control-group">
	  <%= f.check_box :stock %> PÃ¥ lager
  </div>
  <div class"control-group">
	  <%= collection_select(:product, :category_id, @categories, :id, :c_name, {:prompt => "Velg kategori" }) %>
