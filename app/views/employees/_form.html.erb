<%= simple_form_for(@employee, :html => { :multipart => true }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name, placeholder: "Navn", :autofocus => true %>
    <%= f.input :email, placeholder: "E-post" %>
	<%= f.file_field :avatar %>
  </div>
  <br/>
  <div class="actions">
    <%= f.submit "Legg til" , :class => "btn btn-primary btn-small" %>
  </div>
<% end %>
