<h2>Admin login</h2>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <div>
  <%= f.email_field :email, :autofocus => true, "placeholder" => "E-post" %></div>

  <div>
  <%= f.password_field :password, "placeholder" => "Passord" %></div>

  <% if devise_mapping.rememberable? -%>
    <div><%= f.check_box :remember_me %> Husk meg</div>
	<br/>
  <% end -%>

  <div><%= f.submit "Logg inn", :class => "btn btn-small btn-primary" %></div>
<% end %>

<%= render "devise/shared/links" %>
