<table class="table table-striped">
  <tr>
    <th>Kategorinavn</th>
    <th></th>
  </tr>

<% @categories.each do |category| %>
  <tr>
    <td><%= best_in_place category, :c_name %></td>
    <td><%= link_to 'Show', category, :class => "btn"  %>
    <%= link_to 'Edit', edit_category_path(category), :class => "btn"  %>
    <%= link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger" %></td>
  </tr>
<% end %>
</table>

<%= link_to 'Ny kategori', new_category_path %>
