<%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :email, :required => false, :autofocus => true, placeholder: "E-post" %>
    <%= f.input :password, :required => false, placeholder: "Passord" %>
    <%= f.input :remember_me, :as => :boolean if devise_mapping.rememberable? %><br/>
	<%= f.button :submit, "Sign in" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
