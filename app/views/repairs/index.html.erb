<h1>Listing repairs</h1>

<table class="table table-striped">
  <tr>
    <th>Name</th>
    <th>Telefon modell</th>
    <th>Deler</th>
    <th>Tilleggsopplysninger</th>
    <th>Levert</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @repairs.each do |repair| %>
  <tr>
    <td><%= repair.name %></td>
    <td><%= repair.phone_model.name %></td>
    <td><%= repair.product.p_name %></td>
    <td><%= repair.free_text %></td>
    <td><%= repair.created_at %></td>
    <td><%= link_to 'Edit', edit_repair_path(repair), class: "btn btn-small" %></td>
    <td><%= link_to 'Destroy', repair, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-small btn-danger" %></td>
    <td><%= link_to 'Klar', "#", class: "btn btn-small btn-primary" %></td>
  </tr>
<% end %>
</table>

