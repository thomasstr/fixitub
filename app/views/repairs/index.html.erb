<h2>Reperasjoner</h2>

<table class="table table-striped">
  <tr>
    <th>Name</th>
    <th>Telefon modell</th>
    <th>Deler</th>
    <th>Tilleggsopplysninger</th>
    <th>Levert inn</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @repairs.each do |repair| %>
  <tr>
    <td><%= best_in_place repair, :name %></td>
    <td><%= repair.phone_model.name %></td>
    <td><%= repair.product.p_name %></td>
    <td><%= best_in_place repair, :free_text %></td>
    <td><%= repair.created_at %></td>
    <td><%= link_to 'Endre', edit_repair_path(repair), class: "btn btn-small" %></td>
    <td><%= link_to 'Slett', repair, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-small btn-danger" %></td>
    <td><%= link_to 'Klar', phone_deliver_repair_path(repair), class: "btn btn-small btn-primary" %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Ny reperasjon', new_repair_path, class: "btn btn-small" %>
